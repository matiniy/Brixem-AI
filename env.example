# Groq Configuration (Primary AI Provider)
# Copy this file to .env.local and replace with your actual API key
GROQ_API_KEY=your_groq_api_key_here

# Optional: Model configuration (llama-3.1-70b-versatile, mixtral-8x7b-32768, gemma-7b-it)
GROQ_MODEL=llama-3.1-70b-versatile

# Optional: Max tokens for responses
GROQ_MAX_TOKENS=1000

# Optional: Temperature for response creativity (0.0 to 2.0)
GROQ_TEMPERATURE=0.7

# OpenAI Configuration (Backup/Alternative)
# Keep these for future use when you want to switch back to OpenAI
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_MAX_TOKENS=1000
# OPENAI_TEMPERATURE=0.7

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (for server-side operations only)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Ollama Configuration (optional alternative to OpenAI)
OLLAMA_BASE_URL=https://your-ollama-host:11434

# Stripe Configuration (for payments)
# Get these from your Stripe dashboard
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# App Configuration
NEXT_PUBLIC_APP_URL=https://www.brixem.com

# Feature Flags
# Set to "1" to enable the new chat-first dashboard layout (enabled by default)
NEXT_PUBLIC_CHAT_FIRST=1

# Error Monitoring (Sentry)
# Get this from your Sentry project
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Analytics (Google Analytics)
# Get this from your GA property
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Email Service (SendGrid)
# Get this from your SendGrid account
SENDGRID_API_KEY=your_sendgrid_api_key 